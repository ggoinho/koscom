<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llRow"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="2dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/shape_rect_fill3"
        android:paddingTop="30.7dp"
        android:paddingLeft="10dp"
        android:paddingRight="12dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/stockName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="22dp"
            android:textSize="15sp"
            android:textColor="#000000"
            android:lineSpacingExtra="5sp"
            android:text="엘앤제이"/>

        <TextView
            android:id="@+id/stockGubn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#757575"
            android:lineSpacingExtra="7sp"
            android:text="3우선주(전환상환)"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.4dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#757575"
                android:lineSpacingExtra="21sp"
                android:text="수량"/>
            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#333333"
                android:lineSpacingExtra="20sp"
                android:gravity="end"
                android:text="500주"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.9dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:lineSpacingExtra="21sp"
                android:text="가격"
                android:textColor="#757575"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#000000"
                android:lineSpacingExtra="20sp"
                android:gravity="end"
                android:text="5,000원"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="74dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <include layout="@layout/view_order_status1"/>
        <include layout="@layout/view_order_status2"/>
        <include layout="@layout/view_order_status3"/>
        <include layout="@layout/view_order_status4"/>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>