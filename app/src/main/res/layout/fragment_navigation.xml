<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="11dp"
            android:background="@drawable/gradient"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:paddingBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="전체메뉴"
                    android:textSize="17dp"
                    android:textColor="#ffffff"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btnClose"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ico_expand_close_w"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="9dp"
                android:paddingBottom="11dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ico_sn_r"/>
                <TextView
                    android:id="@+id/nicname"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textSize="13dp"
                    android:textColor="#ffffff"
                    android:lineSpacingExtra="5dp"
                    android:text="매수닉(김희응)님"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btnExit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ico_logout_w"/>
            </LinearLayout>

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/btnHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="13dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ico_menu_logo"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:textSize="14dp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:text="홈"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee"/>

                <LinearLayout
                    android:id="@+id/menu1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="13dp"
                    android:paddingRight="10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ico_menu_01"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:textSize="14dp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:text="주문"/>
                    <ImageView
                        android:tag="more"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ico_expand_more"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee"/>

                <LinearLayout
                    android:id="@+id/sub1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f8f8f8"
                        android:paddingLeft="30dp"
                        android:paddingTop="11dp"
                        android:paddingBottom="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/btnTrading1"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:text="주문현황"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/btnTrading2"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"
                            android:text="계약 및 체결 현황"/>
                        <TextView
                            android:id="@+id/btnTrading3"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"
                            android:text="주문등록"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#eeeeee"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="13dp"
                    android:paddingRight="10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ico_menu_02"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:textSize="14dp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:text="종목정보"/>
                    <ImageView
                        android:tag="more"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ico_expand_more"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee"/>

                <LinearLayout
                    android:id="@+id/sub2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f8f8f8"
                        android:paddingLeft="30dp"
                        android:paddingTop="11dp"
                        android:paddingBottom="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/btnInvestment1"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"
                            android:text="기업정보"/>

                        <TextView
                            android:id="@+id/btnExpertDiagnosis"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            style="@style/F13R_333333"
                            android:gravity="center_vertical"
                            android:text="@string/drawer_expert_diagnosis"/>

                        <TextView
                            android:id="@+id/btnInvestment2"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"
                            android:text="@string/drawer_corporate_alert"/>

                        <TextView
                            android:id="@+id/btnDiscussion"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            style="@style/F13R_333333"
                            android:gravity="center_vertical"
                            android:text="@string/drawer_discussion_board"/>

                        <TextView
                            android:id="@+id/btnNews"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            style="@style/F13R_333333"
                            android:gravity="center_vertical"
                            android:text="@string/drawer_news"/>

                        <TextView
                            android:id="@+id/btnPatent"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            style="@style/F13R_333333"
                            android:gravity="center_vertical"
                            android:text="@string/drawer_patent"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#eeeeee"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="13dp"
                    android:paddingRight="10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ico_menu_03"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:textSize="14dp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:text="협상채팅"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:background="#eeeeee"/>

                <LinearLayout
                    android:id="@+id/menu4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="13dp"
                    android:paddingRight="10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ico_menu_04"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:textSize="14dp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:text="마이페이지"/>
                    <ImageView
                        android:tag="more"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ico_expand_more"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee"/>

                <LinearLayout
                    android:id="@+id/sub4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f8f8f8"
                        android:paddingLeft="30dp"
                        android:paddingTop="11dp"
                        android:paddingBottom="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/btnRegist"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"
                            android:text="가입정보관리"/>
                        <TextView
                            android:id="@+id/btnMyOrder"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"
                            android:text="나의 주문"/>
                        <TextView
                            android:id="@+id/btnMyNego"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"
                            android:text="나의 협상"/>

                        <TextView
                            android:id="@+id/btnMyContractAndConclusion"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"
                            android:text="나의 계약 및 체결"/>

                        <TextView
                            android:id="@+id/btnBalance"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"
                            android:text="보유잔고"/>
                        <TextView
                            android:id="@+id/btnFile"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"
                            android:text="증빙서류관리"/>

                        <TextView
                            android:id="@+id/btnOut"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"
                            android:text="서비스해지"/>

                        <TextView
                            android:id="@+id/btnAlarmList"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"
                            android:text="알림수신함"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#eeeeee"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/sub5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f8f8f8"
                        android:paddingLeft="30dp"
                        android:paddingTop="11dp"
                        android:paddingBottom="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"
                            android:text="이용안내"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"
                            android:text="등록기업 서비스 가이드"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"
                            android:text="투자자 서비스 가이드"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"
                            android:text="보안모듈설치"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"
                            android:text="인증방법안내"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#eeeeee"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="13dp"
                    android:paddingRight="10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ico_menu_06"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:textSize="14dp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:text="고객센터"/>
                    <ImageView
                        android:tag="more"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ico_expand_more"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee"/>

                <LinearLayout
                    android:id="@+id/sub6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f8f8f8"
                        android:paddingLeft="30dp"
                        android:paddingTop="11dp"
                        android:paddingBottom="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/btnNotice"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"
                            android:text="공지사항"/>

                        <TextView
                            android:id="@+id/btnServiceInfo"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"
                            android:text="서비스소개"/>


                        <TextView
                            android:id="@+id/btnFaq"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"
                            android:text="FAQ"/>

                        <TextView
                            android:id="@+id/btnQna"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"
                            android:text="1:1 문의"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#eeeeee"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="13dp"
                    android:paddingRight="10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ico_menu_07"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:textSize="14dp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:text="설정"/>
                    <ImageView
                        android:tag="more"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ico_expand_more"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee"/>

                <LinearLayout
                    android:id="@+id/sub7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f8f8f8"
                        android:paddingLeft="30dp"
                        android:paddingTop="11dp"
                        android:paddingBottom="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/btnAlarm"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"
                            android:text="알림설정"/>
                        <TextView
                            android:id="@+id/btnAgree"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"
                            android:text="마케팅수신동의"/>
                        <TextView
                            android:id="@+id/btnVersion"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"
                            android:text="버전정보"/>
                        <TextView
                            android:id="@+id/btnUseAgreement"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"
                            android:text="서비스이용약관"/>
                        <TextView
                            android:id="@+id/btnInfoAgreement"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:textSize="13dp"
                            android:textColor="#333333"
                            android:gravity="center_vertical"
