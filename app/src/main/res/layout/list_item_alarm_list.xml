<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/llRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect_fill25"
        android:minHeight="84dp"
        android:paddingTop="9dp"
        android:paddingLeft="10dp"
        android:paddingRight="12dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/gubnNotice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ico_notice_14"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="5sp"
                    android:text="공지사항"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/gubnMessage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">
                <TextView
                    android:id="@+id/gubn"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:background="@drawable/shape_rect_fill29"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textSize="13sp"
                    android:textColor="#038085"
                    android:lineSpacingExtra="5sp"
                    android:text="기업알림"
                    android:gravity="center"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#757575"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="6sp"
                android:text="2019-06-07"/>
            <TextView
                android:id="@+id/readYn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:textSize="12sp"
                android:textColor="#e8055a"
                android:lineSpacingExtra="39sp"
                android:gravity="center_horizontal"
                android:text="N"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="#333333"
            android:lineSpacingExtra="4sp"
            android:text="새로운 공지사항이 등록되었습니다"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>