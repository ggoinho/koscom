<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="13dp"
        android:paddingRight="17dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/profileImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ico_sn_ko"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nicname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#333333"
                android:lineSpacingExtra="5dp"
                android:text="코스콤"/>
            <TextView
                android:id="@+id/userid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="13dp"
                android:textColor="#3348ae"
                android:lineSpacingExtra="5dp"
                android:text="나야나(김희응)"/>
            <TextView
                android:id="@+id/channelUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="13dp"
                android:textColor="#3348ae"
                android:lineSpacingExtra="5dp"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/count"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/shape_rect_fill6"
                android:gravity="center"
                android:text="0"
                android:textSize="10dp"
                android:textColor="#ffffff"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/complete"
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:background="@drawable/shape_rect_fill7"
                android:text="완료"
                android:textSize="14dp"
                android:textColor="#757575"
                android:gravity="center"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/lastDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12dp"
                android:textColor="#666666"
                android:lineSpacingExtra="6dp"
                android:gravity="end"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>