<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50000000"
    android:id="@+id/container">

    <LinearLayout
        android:id="@+id/layout_login"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:background="@drawable/shape_rect_fill17">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#000826"
                android:lineSpacingExtra="4dp"
                android:gravity="center_horizontal"
                android:text="에스크로 정보 안내"/>

            <LinearLayout
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ico_expand_close"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dddddd"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="14.3dp"
            android:textSize="14dp"
            android:textColor="#3348ae"
            android:lineSpacingExtra="4dp"
            android:text="※ 매도계좌 이체 지시 후 실 계좌 이체까지
는 24시간이상 소요됩니다."/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="#f8f8f8"
            android:layout_marginTop="15dp"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:orientation="horizontal"
            android:gravity="top">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="12dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ico_bullet_g"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="14dp"
                android:textColor="#555555"
                android:lineSpacingExtra="11dp"
                android:text="입금 계좌정보"/>
            <TextView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#3348ae"
                android:text="하나은행\n123-21-1234-123"
                android:gravity="right"/>

        </RelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:src="@drawable/bullet"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.8dp"
                android:textSize="14dp"
                android:textColor="#555555"
                android:lineSpacingExtra="11dp"
                android:text="상세정보"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:textSize="14dp"
                android:textColor="#555555"
                android:lineSpacingExtra="4dp"
                android:gravity="end"
                android:text="단위 : 원"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.3dp"
            android:paddingLeft="14.8dp"
            android:paddingRight="15.2dp"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="13dp"
                    android:textColor="#555555"
                    android:lineSpacingExtra="27dp"
                    android:text="총 입금 금액"/>
                <TextView
                    android:id="@+id/dealAmount"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical|end"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#3348ae"
                    android:lineSpacingExtra="26dp"
                    android:text="100,000" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="13dp"
                    android:textColor="#555555"
                    android:lineSpacingExtra="27dp"
                    android:text="거래금액"/>
                <TextView
                    android:id="@+id/fee"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical|end"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:lineSpacingExtra="26dp"
                    android:text="200,000" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eeeeee"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/field3"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="13dp"
                    android:textColor="#555555"
                    android:text="플랫폼 이용료\n(거래금액 1%)"/>
                <TextView
                    android:id="@+id/fee1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical|end"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:lineSpacingExtra="26dp"
                    android:text="300,000" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eeeeee"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/field4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="13dp"
                    android:textColor="#555555"
                    android:text="계약서 자동작성\n서비스 수수료"/>
                <TextView
                    android:id="@+id/fee2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical|end"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:lineSpacingExtra="26dp"
                    android:text="400,000" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eeeeee"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="13dp"
                    android:textColor="#555555"
                    android:text="주권미발행확인서 발급\n서비스 수수료"/>
                <TextView
                    android:id="@+id/totalAmount"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical|end"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:lineSpacingExtra="26dp"
                    android:text="1,000,000" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnOk"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16.5dp"
            android:background="@drawable/shape_rect_fill16"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:lineSpacingExtra="5dp"
            android:gravity="center"
            android:text="확인"/>

    </LinearLayout>

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progress_bar_login"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>