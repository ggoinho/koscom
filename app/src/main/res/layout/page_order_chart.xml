<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:clipToPadding="false">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_rect_fill24"
        android:elevation="1dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical">
            <kr.co.koscom.omp.view.MyScrollView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="11dp"
                android:paddingBottom="7dp">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/companyInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/btnCompany"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_rect_fill10"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textSize="13dp"
                        android:textColor="#4e4e9e"
                        android:lineSpacingExtra="21dp"
                        android:text="기업정보"/>
                    <TextView
                        android:id="@+id/stockCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:textSize="14dp"
                        android:textColor="#b8c0db"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="4dp"
                        android:visibility="gone"
                        android:text="123456"/>
                    <TextView
                        android:id="@+id/stockKind"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="11dp"
                        android:textSize="14dp"
                        android:textColor="#b8c0db"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="4dp"
                        android:text="업종"
                        android:visibility="gone"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </kr.co.koscom.omp.view.MyScrollView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:minWidth="78dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:textColor="#dfe2ee"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="5dp"
                        android:gravity="center_horizontal"
                        android:text="수량(주)"/>
                    <TextView
                        android:id="@+id/count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:lineSpacingExtra="8dp"
                        android:gravity="center_horizontal"
                        android:text="10,000,000"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:minWidth="64dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:textColor="#dfe2ee"
                        android:letterSpacing="-0.03"
                        android:lineSpacingExtra="5dp"
                        android:gravity="center_horizontal"
                        android:text="가격(원)"/>
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:lineSpacingExtra="8dp"
                        android:gravity="center_horizontal"
                        android:text="500"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="7dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical">

            <kr.co.koscom.omp.view.MyScrollView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="15dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <kr.co.koscom.omp.view.MyLineChart
                        android:id="@+id/chart"
                        android:layout_width="94dp"
                        android:layout_height="35.2dp"/>
                </LinearLayout>
            </kr.co.koscom.omp.view.MyScrollView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/btnNego"
                android:layout_width="94dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_rect_fill23"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ico_chat_w"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:letterSpacing="-0.05"
                    android:lineSpacingExtra="5dp"
                    android:gravity="center_horizontal"
                    android:text="협상요청"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
